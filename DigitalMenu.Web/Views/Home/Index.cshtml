@{
    ViewData["Title"] = "منوی دیجیتال";
}

<!-- بخش هیرو -->
<section class="hero-section">
    <div class="container">
        <h1 class="display-3 fw-bold mb-4">به منوی دیجیتال خوش آمدید</h1>
        <p class="lead mb-4">تجربه‌ای مدرن از سفارش غذا در رستوران</p>
        <a href="/Menu" class="btn btn-primary btn-lg">
            <i class="bi bi-menu-button-wide me-2"></i>
            مشاهده منو
        </a>
    </div>
</section>

<!-- بخش ویژگی‌ها -->
<section class="py-5">
    <div class="container">
        <div class="row text-center mb-5">
            <div class="col-12">
                <h2 class="display-5 fw-bold text-white">چرا منوی دیجیتال؟</h2>
                <p class="lead text-white">امکانات ویژه برای رستوران‌داران و مشتریان</p>
            </div>
        </div>

        <div class="row g-4">
            <div class="col-md-4">
                <div class="feature-card card h-100 bg-white">
                    <div class="card-body text-center p-4">
                        <div class="text-primary mb-3" style="font-size: 3rem;">
                            <i class="bi bi-phone"></i>
                        </div>
                        <h4 class="card-title">منوی آنلاین</h4>
                        <p class="card-text">دسترسی آسان به منو از طریق موبایل و تبلت</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="feature-card card h-100 bg-white">
                    <div class="card-body text-center p-4">
                        <div class="text-success mb-3" style="font-size: 3rem;">
                            <i class="bi bi-lightning-charge"></i>
                        </div>
                        <h4 class="card-title">سفارش سریع</h4>
                        <p class="card-text">کاهش زمان انتظار با سیستم سفارش دیجیتال</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="feature-card card h-100 bg-white">
                    <div class="card-body text-center p-4">
                        <div class="text-warning mb-3" style="font-size: 3rem;">
                            <i class="bi bi-graph-up"></i>
                        </div>
                        <h4 class="card-title">مدیریت هوشمند</h4>
                        <p class="card-text">سیستم مدیریت یکپارچه برای رستوران‌داران</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- بخش آمار -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row g-4">
            <div class="col-md-3">
                <div class="stats-card">
                    <div class="text-primary mb-2" style="font-size: 2.5rem;">
                        <i class="bi bi-cup-hot"></i>
                    </div>
                    <h3 class="text-primary">50+</h3>
                    <p class="text-muted">محصول متنوع</p>
                </div>
            </div>

            <div class="col-md-3">
                <div class="stats-card">
                    <div class="text-success mb-2" style="font-size: 2.5rem;">
                        <i class="bi bi-tags"></i>
                    </div>
                    <h3 class="text-success">6+</h3>
                    <p class="text-muted">دسته‌بندی مختلف</p>
                </div>
            </div>

            <div class="col-md-3">
                <div class="stats-card">
                    <div class="text-warning mb-2" style="font-size: 2.5rem;">
                        <i class="bi bi-receipt"></i>
                    </div>
                    <h3 class="text-warning">100+</h3>
                    <p class="text-muted">سفارش روزانه</p>
                </div>
            </div>

            <div class="col-md-3">
                <div class="stats-card">
                    <div class="text-info mb-2" style="font-size: 2.5rem;">
                        <i class="bi bi-emoji-smile"></i>
                    </div>
                    <h3 class="text-info">95%</h3>
                    <p class="text-muted">رضایت مشتریان</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="py-5 text-center">
    <div class="container">
        <h2 class="display-6 fw-bold text-white mb-4">آماده شروع هستید؟</h2>
        <p class="lead text-white mb-4">همین حالا منوی دیجیتال رستوران خود را راه‌اندازی کنید</p>
        <div class="d-flex justify-content-center gap-3">
            <a href="/Menu" class="btn btn-primary btn-lg">
                <i class="bi bi-eye me-2"></i>
                مشاهده منو
            </a>
            <a href="/Products" class="btn btn-outline-light btn-lg">
                <i class="bi bi-gear me-2"></i>
                پنل مدیریت
            </a>
        </div>
    </div>
</section>
@model List<DigitalMenu.Application.DTOs.CategoryDTOs.CategoryDto>

@{
    ViewData["Title"] = "منوی رستوران";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="text-center flex-grow-1">
            <h1 class="display-4 fw-bold text-white">منوی رستوران</h1>
            <p class="lead text-white">لذیذترین غذاها و نوشیدنی‌ها</p>
        </div>
        <a href="/Cart" class="btn btn-primary position-relative">
            <i class="bi bi-cart3 me-2"></i>
            سبد خرید
            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                @(ViewBag.CartItemCount ?? 0)
            </span>
        </a>
    </div>

    <!-- نمایش تمام محصولات دسته‌بندی‌ها در یک صفحه -->
    @if (Model != null && Model.Any())
    {
        @foreach (var category in Model)
        {
            @if (category.Products != null && category.Products.Any())
            {
                <div class="category-section mb-5">
                    <div class="d-flex align-items-center mb-4">
                        <div class="me-3" style="font-size: 2.5rem;">@category.Icon</div>
                        <div>
                            <h2 class="text-white mb-1">@category.Name</h2>
                            <p class="text-light mb-0">@category.Description</p>
                        </div>
                    </div>

                    <div class="row">
                        @foreach (var product in category.Products)
                        {
                            <div class="col-md-6 col-lg-4 mb-4">
                                <div class="card h-100 shadow-sm product-card">
                                    <div class="card-body d-flex flex-column">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <h5 class="card-title">@product.Name</h5>
                                            <span class="badge @(product.IsAvailable ? "bg-success" : "bg-danger")">
                                                @(product.IsAvailable ? "موجود" : "ناموجود")
                                            </span>
                                        </div>

                                        <p class="card-text text-muted flex-grow-1">@product.Description</p>

                                        <div class="mt-auto">
                                            <div class="d-flex justify-content-between align-items-center mb-2">
                                                <span class="text-success fw-bold fs-5">@product.Price.ToString("C")</span>
                                                <small class="text-muted">@category.Name</small>
                                            </div>

                                            <!-- دکمه افزودن به سبد خرید -->
                                            @if (product.IsAvailable)
                                            {
                                                <form method="post" action="@Url.Action("AddToCart", "Cart")" class="mt-3">
                                                    <input type="hidden" name="productId" value="@product.Id" />
                                                    <div class="input-group">
                                                        <input type="number" name="quantity" value="1" min="1" max="10"
                                                               class="form-control text-center" style="max-width: 80px;">
                                                        <button type="submit" class="btn btn-success flex-grow-1">
                                                            <i class="bi bi-cart-plus me-2"></i>
                                                            افزودن
                                                        </button>
                                                    </div>
                                                </form>
                                            }
                                            else
                                            {
                                                <button class="btn btn-outline-secondary w-100" disabled>
                                                    <i class="bi bi-slash-circle me-2"></i>
                                                    ناموجود
                                                </button>
                                            }
                                        </div>
                                    </div>

                                    <!-- کارت فوتر برای اطلاعات اضافی -->
                                    <div class="card-footer bg-transparent">
                                        <div class="row text-center text-muted small">
                                            <div class="col-6">
                                                <i class="bi bi-clock me-1"></i>
                                                @product.PreparationTime دقیقه
                                            </div>
                                            <div class="col-6">
                                                <i class="bi bi-star me-1"></i>
                                                محبوب
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <hr class="my-5 border-light">
                </div>
            }
        }
    }
    else
    {
        <div class="col-12">
            <div class="alert alert-warning text-center">
                <h4>منوی در دسترس نیست</h4>
                <p>لطفاً稍后再试</p>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // انیمیشن برای کارت‌ها
            $('.product-card').hover(
                function() {
                    $(this).addClass('shadow-lg');
                    $(this).css('transform', 'translateY(-5px)');
                },
                function() {
                    $(this).removeClass('shadow-lg');
                    $(this).css('transform', 'translateY(0)');
                }
            );

            // اعتبارسنجی تعداد
            $('input[type="number"]').on('change', function() {
                if ($(this).val() < 1) {
                    $(this).val(1);
                }
                if ($(this).val() > 10) {
                    $(this).val(10);
                }
            });

            // نمایش پیام موفقیت
            $('form').on('submit', function() {
                const productName = $(this).closest('.card').find('.card-title').text();
                setTimeout(() => {
                    if (typeof window.showNotification === 'function') {
                        window.showNotification(`"${productName}" به سبد خرید اضافه شد`, 'success');
                    }
                }, 500);
            });
        });
    </script>

    <style>
        .category-section {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            padding: 2rem;
            margin-bottom: 2rem;
        }

        .product-card {
            transition: all 0.3s ease;
            border: none;
            border-radius: 15px;
            background: rgba(255, 255, 255, 0.95);
        }

            .product-card:hover {
                transform: translateY(-5px);
            }

        .btn-success {
            background: linear-gradient(45deg, #28a745, #20c997);
            border: none;
            transition: all 0.3s ease;
        }

            .btn-success:hover {
                transform: scale(1.05);
                box-shadow: 0 5px 15px rgba(40, 167, 69, 0.3);
            }
    </style>
}
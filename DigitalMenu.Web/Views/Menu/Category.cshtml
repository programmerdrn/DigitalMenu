@model DigitalMenu.Application.DTOs.CategoryDTOs.CategoryDto

@{
    ViewData["Title"] = Model.Name;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="d-flex align-items-center">
            <a href="@Url.Action("Index")" class="btn btn-outline-secondary me-3">
                <i class="bi bi-arrow-right"></i>
                بازگشت به منو
            </a>
            <div class="me-3" style="font-size: 2rem;">@Model.Icon</div>
            <div>
                <h1 class="mb-0">@Model.Name</h1>
                <p class="text-muted mb-0">@Model.Description</p>
            </div>
        </div>
        <a href="/Cart" class="btn btn-primary position-relative">
            <i class="bi bi-cart3 me-2"></i>
            سبد خرید
            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                @(ViewBag.CartItemCount ?? 0)
            </span>
        </a>
    </div>

    <div class="row">
        @if (Model.Products != null && Model.Products.Any())
        {
            @foreach (var product in Model.Products)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body d-flex flex-column">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="card-title">@product.Name</h5>
                                <span class="badge @(product.IsAvailable ? "bg-success" : "bg-danger")">
                                    @(product.IsAvailable ? "موجود" : "ناموجود")
                                </span>
                            </div>

                            <p class="card-text text-muted flex-grow-1">@product.Description</p>

                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="text-success fw-bold fs-5">@product.Price.ToString("C")</span>
                                    <small class="text-muted">آماده‌سازی: @product.PreparationTime دقیقه</small>
                                </div>

                                <!-- دکمه افزودن به سبد خرید -->
                                @if (product.IsAvailable)
                                {
                                    <form method="post" action="@Url.Action("AddToCart", "Cart")" class="mt-3">
                                        <input type="hidden" name="productId" value="@product.Id" />
                                        <div class="input-group">
                                            <input type="number" name="quantity" value="1" min="1" max="10"
                                                   class="form-control text-center" style="max-width: 80px;">
                                            <button type="submit" class="btn btn-success flex-grow-1">
                                                <i class="bi bi-cart-plus me-2"></i>
                                                افزودن به سبد
                                            </button>
                                        </div>
                                    </form>
                                }
                                else
                                {
                                    <button class="btn btn-outline-secondary w-100" disabled>
                                        <i class="bi bi-slash-circle me-2"></i>
                                        ناموجود
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info text-center py-4">
                    <i class="bi bi-inbox display-4 d-block mb-3"></i>
                    <h4>هیچ محصولی در این دسته‌بندی وجود ندارد</h4>
                    <a href="@Url.Action("Index")" class="btn btn-primary mt-3">بازگشت به منوی اصلی</a>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // انیمیشن برای کارت‌ها
            $('.card').hover(
                function() {
                    $(this).addClass('shadow-lg');
                    $(this).css('transform', 'translateY(-3px)');
                },
                function() {
                    $(this).removeClass('shadow-lg');
                    $(this).css('transform', 'translateY(0)');
                }
            );

            // اعتبارسنجی تعداد
            $('input[type="number"]').on('change', function() {
                if ($(this).val() < 1) {
                    $(this).val(1);
                }
                if ($(this).val() > 10) {
                    $(this).val(10);
                }
            });

            // نمایش پیام موفقیت
            $('form').on('submit', function() {
                const productName = $(this).closest('.card').find('.card-title').text();
                setTimeout(() => {
                    showNotification(`"${productName}" به سبد خرید اضافه شد`, 'success');
                }, 500);
            });
        });

        function showNotification(message, type = 'success') {
            // استفاده از تابعی که در Layout تعریف شده
            if (typeof window.showNotification === 'function') {
                window.showNotification(message, type);
            }
        }
    </script>
}